{
  "compilerOptions": {
    "target": "es2019", // or "es2018", "esnext"
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
